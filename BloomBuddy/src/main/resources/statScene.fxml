<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: ffffff;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group18.BloomBuddy.application.StatsController">
   <children>
      <LineChart fx:id="tempLineChart" layoutX="216.0" layoutY="31.0" legendVisible="false" prefHeight="240.0" prefWidth="280.0" title="Temperature">
         <xAxis>
            <CategoryAxis side="BOTTOM" />
         </xAxis>
         <yAxis>
            <NumberAxis side="LEFT" />
         </yAxis>
      </LineChart>
      <LineChart fx:id="moistLineChart" layoutX="210.0" layoutY="286.0" legendVisible="false" prefHeight="240.0" prefWidth="280.0" title="Moisture">
         <xAxis>
            <CategoryAxis side="BOTTOM" />
         </xAxis>
         <yAxis>
            <NumberAxis side="LEFT" />
         </yAxis>
      </LineChart>
      <LineChart fx:id="humLineChart" layoutX="504.0" layoutY="286.0" legendVisible="false" prefHeight="240.0" prefWidth="280.0" title="Humidity">
         <xAxis>
            <CategoryAxis side="BOTTOM" />
         </xAxis>
         <yAxis>
            <NumberAxis side="LEFT" />
         </yAxis>
      </LineChart>
      <LineChart fx:id="lightLineChart" layoutX="504.0" layoutY="31.0" legendVisible="false" prefHeight="240.0" prefWidth="280.0" title="Light level">
         <xAxis>
            <CategoryAxis side="BOTTOM" />
         </xAxis>
         <yAxis>
            <NumberAxis side="LEFT" />
         </yAxis>
      </LineChart>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#ddfbdb" height="600.0" layoutX="-7.0" stroke="#ddfbdb" strokeType="INSIDE" width="174.0" />
      <Button fx:id="myPlantButton" contentDisplay="TOP" layoutX="50.0" layoutY="150.0" mnemonicParsing="false" onAction="#setPlantOverviewScene" prefHeight="62.0" prefWidth="72.0" style="-fx-background-color: Transparent;" text="My plants" textAlignment="CENTER">
         <graphic>
            <ImageView fitHeight="55.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@plantIcon.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="homeButton" contentDisplay="TOP" layoutX="50.0" layoutY="50.0" mnemonicParsing="false" onAction="#setHomeScene" prefHeight="0.0" prefWidth="0.0" style="-fx-background-color: Transparent;" text="Home" textAlignment="CENTER">
         <graphic>
            <ImageView fitHeight="55.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@homeIcon.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="statisticsButton" contentDisplay="TOP" layoutX="50.0" layoutY="250.0" mnemonicParsing="false" onAction="#setStatScene" prefHeight="62.0" prefWidth="72.0" style="-fx-background-color: Transparent;" text="Statistics" textAlignment="CENTER">
         <graphic>
            <ImageView fitHeight="55.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@statIcon.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="settingsButton" contentDisplay="TOP" layoutX="50.0" layoutY="350.0" mnemonicParsing="false" onAction="#setSettingsScene" prefHeight="62.0" prefWidth="72.0" style="-fx-background-color: Transparent;" text="Settings" textAlignment="CENTER">
         <graphic>
            <ImageView fitHeight="55.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@settingsIcon.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="logOutButton" contentDisplay="TOP" layoutX="50.0" layoutY="450.0" mnemonicParsing="false" onAction="#setLoginScene" prefHeight="62.0" prefWidth="72.0" style="-fx-background-color: Transparent;" text="Log out" textAlignment="CENTER">
         <graphic>
            <ImageView fitHeight="55.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@logoutIcon.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
